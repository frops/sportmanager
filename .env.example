# Database configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
DATABASE_PUBLIC_URL=postgresql://user:password@localhost:5432/dbname

# PostgreSQL specific variables
POSTGRES_DB=dbname
POSTGRES_USER=user
POSTGRES_PASSWORD=password

# Connection details
PGHOST=localhost
PGPORT=5432
PGUSER=user
PGPASSWORD=password
PGDATABASE=dbname
PGDATA=/var/lib/postgresql/data

# SSL configuration
SSL_CERT_DAYS=30

# Telegram Bot Token (if needed)
TELEGRAM_BOT_TOKEN=your_token_here 